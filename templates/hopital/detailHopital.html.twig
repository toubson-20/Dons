{% extends 'base.html.twig' %}

{% block title %}hopital
{% endblock %}


{% block body %}
	<style>
		.card-detail {
			width: 50%;
			margin-left: 27%;
			text-align: center;
			margin-top: 200px;
		}
	</style>
	{% include "menu/header.html.twig" %}
	<div class="row">
		<div class="col-6">
			<div class=" card-detail card shadow-1 hoverable-1 rounded-3 white center">
				<div class="card-header">{{ hopital.nom }}
					({{ hopital.departement }})
					{{ hopital.ville }}</div>
				<div class="card-content">
					<p>
						{{ hopital.adresse }}
					</p>
					<br>
					<p>
						Site web :
						{{ hopital.siteWeb }}
					</p>
					<br>
				</div>
			</div>
		</div>
		<div class="col-6"></div>
	</div>
	{% include "menu/footer.html.twig" %}
{% endblock %}
