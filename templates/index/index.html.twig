{% extends "base.html.twig" %}

{% block title %}Dons Pour Tous!
{% endblock %}

{% block body %}
	<style>
		.container-2 {
			margin-top: 60px;
			display: flex;
		}

		.column-left {
			flex: 1;
		}

		.column-right {
			flex: 1;
			display: flex;
			justify-content: flex-end;
			align-items: flex-end;
		}

		.slid {
			background-image: url('chemin/vers/mon-image.jpg');
			height: 40rem;
			width: 100%;
			background-color: whitered;
			position: sticky;
		}

		.content-slid {
			margin-top: 20%;
			z-index: 1;
			text-align: center;
			border: 1px;
			width: 50%;
			margin-left: 25%;
		}

		.page {
			font-weight: bold;
			display: flex;
			justify-content: center;
			align-items: center;
			letter-spacing: 4px;
		}
	</style>
	{% include "menu/header.html.twig" %}
	<div class="slid">
		<div class="content-slid border">
			<b>REJOIGNEZ-NOUS SAUVEZ DES VIES</b>
		</div>
	</div>

	<section class="slider mt-3">
		<div class="container-fluid">
			<div class="row no-gutters">
				<div class="col-lg-12 col-sm-12 col-md-12 slider-wrap">
					{% for item in paginationCampagne %}
						<div class="slider-item">
							<div class="slider-item-content">
								<div class="post-thumb mb-4">
									<a href="blog-single.html">
										<img src="images/slider/slider1.jpg" alt="" class="img-fluid">
									</a>
								</div>

								<div class="slider-post-content">
									<span class="cat-name text-color font-sm font-extra text-uppercase letter-spacing">Campagne</span>
									<h3 class="post-title mt-1">
										<a href="blog-single.html">{{item.intitule}}</a>
									</h3>
									<span class=" text-muted  text-capitalize">
										<a href="{{ path('app_detail_campagne', {'id': item.id}) }}">
											<button type="button" class="btn btn-danger" style="border-radius: 5px;">
												Se renseigner</button>
										</a>

									</span>
								</div>
							</div>
						</div>
					{% endfor %}

				</div>
			</div>
		</div>
	</section>
	<div class="page">
		{{ knp_pagination_render(paginationCampagne) }}
	</div>
	<p style="margin-top: 10px;">
		<a href="" class="btn btn-danger" style="border-radius: 5px;">Ajouter une Campagne</a>
	</p>

	<hr>


	{% include "menu/footer.html.twig" %}
{% endblock %}
